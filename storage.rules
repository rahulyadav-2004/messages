rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload files to their chat folders
    match /chats/{chatId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write their own profile images
    match /users/{userId}/profile/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write to general uploads folder
    match /uploads/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}
